{
  "rewrites": [
    {
      "source": "/vi",
      "destination": "/vi.html"
    },
    {
      "source": "/vi/:path*",
      "destination": "/vi.html"
    },
    {
      "source": "/en",
      "destination": "/en.html"
    },
    {
      "source": "/en/:path*",
      "destination": "/en.html"
    },
    {
      "source": "/",
      "destination": "/vi.html"
    },
    {
      "source": "/blog",
      "destination": "/api/_next/data/latest/blog.json"
    },
    {
      "source": "/blog/:slug",
      "destination": "/api/_next/data/latest/blog/:slug.json"
    }
  ],
  "crons": [
    {
      "path": "/api/send-weekly-feedback",
      "schedule": "0 10 * * 6"
    }
  ]
}
